<%- include('includes/head.ejs') %>
  <body>
    <%- include('includes/navigation.ejs') %>

    <h1>Ajouter un Produit </h1>
    
    <% if(products.length > 0) {  %>
     <div class="container">
      <% for(let product of products) { 
        %>

      <form action="/addproduct" method="post">
        <div class="form-group">
          <label for="title">Titre</label>
          <input type="title" id="title" name="title" value="<%= product.title %>" required>
        </div>
        <div class="form-group">
          <label for="imageUrl">Image Url</label>
          <input type="imageUrl" id="imageUrl" name="imageUrl"  value="<%=  product.imageUrl %>"required>
        </div>
        <div class="form-group">
          <label for="price">Prix</label>
          <textarea type ="number" id="price" name="price" value="<%= product.price %>" required></textarea>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" value="<%=  product.description %>"required></textarea>
        </div>
        <button type="submit">Ajouter un Produit</button>
      </form> 
      <% } %>
      <% } else { %>
        <h1>No Products Found</h1>
    <% } %>
    </div>
  </body>
</html>
