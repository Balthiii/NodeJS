<%- include('includes/head.ejs') %>
<body>
    <%- include('includes/navigation.ejs') %>

    <h1>Ajouter un Produit</h1>
    
    <div class="container">
        <form action="/<% if(editing) { %>edit-product<% } else { %>addproduct<% } %>" method="POST">
            <div class="form-group">
                <label for="title">Titre</label>
                <input type="title" id="title" name="title" value="<% if(editing) { %><%= product.title %><%} %>">
            </div>
            <div class="form-group">
                <label for="imageUrl">Image Url</label>
                <input type="imageUrl" id="imageUrl" name="imageUrl"  value="<% if(editing) { %><%= product.imageUrl %><%} %>">
            </div>
            <div class="form-group">
                <label for="price">Prix</label>
                <textarea type="number" id="price" name="price"><% if(editing) { %><%= product.price %><%} %></textarea>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description"><% if(editing) { %><%= product.description %><%} %></textarea>
            </div>

            <% if(editing) { %>
                <input type="hidden" name="id" value="<%= product.id %>">
            <% } %>
            <button class="btn" type="submit"><% if(editing) { %>Modifier un produit<% } else { %>Ajouter un produit<% } %></button>
        </form>
    </div>
</body>
</html>
